@model FilmLibrary.Models.User

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/userForms.css" rel="stylesheet">

<form class="col-4" asp-action="Edit" id="loginId">
    <h2 class="text-center mb-3">Edit</h2>
    <label>
        <p class="label-txt">ENTER FIRSTNAME</p>
        <input asp-for="FirstName" class="input">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="FirstName" class="text-danger row mx-2"></span>
    </label>
    <label>
        <p class="label-txt">ENTER LAST NAME</p>
        <input asp-for="LastName" class="input">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="LastName" class="text-danger row mx-2"></span>
    </label>
    <label>
        <p class="label-txt">ENTER EMAIL</p>
        <input asp-for="Email" class="input">
        <div class="line-box">
            <div class="line"></div>
        </div>
        <span asp-validation-for="Email" class="text-danger row mx-2"></span>
    </label>

    <div class="d-flex flex-row mt-3">
        <div>
            <a asp-action="Index" asp-controller="Home">Back to home page</a>
        </div>
    </div>
    <div class="d-flex flex-row-reverse mt-3">
        <div>
            <button type="submit">save</button>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="js/authScript.js"></script>
